SELECT *
FROM commande
WHERE ID_Commande = 2;

UPDATE Commande
SET ID_Progression = 3
WHERE ID_Commande = 2;

SELECT Commande.ID_Commande, Contient_Recipient_Potion.Quantite_Recipient AS Nombre_Recipient, recipient_en_stock.Quantite_Recipient
FROM ((Commande INNER JOIN Contient_Recipient_Potion ON Commande.ID_Commande = Contient_Recipient_Potion.ID_Commande) INNER JOIN recipient_en_stock
 ON Contient_Recipient_Potion.ID_Recipient_en_Stock = recipient_en_stock.ID_Recipient_en_Stock)
WHERE Commande.ID_Commande = 2;

UPDATE ((recipient_en_stock INNER JOIN Contient_Recipient_Potion ON recipient_en_stock.ID_Recipient_en_Stock = Contient_Recipient_Potion.ID_Recipient_en_Stock) INNER JOIN Commande ON Contient_Recipient_Potion.ID_Commande = Commande.ID_Commande)
SET recipient_en_stock.Quantite_Recipient = recipient_en_stock.Quantite_Recipient - 1
WHERE Commande.ID_Commande = 7;


UPDATE ((Stock_Potion INNER JOIN Contient_Recipient_Potion ON Stock_Potion.ID_Stock_Potion = Contient_Recipient_Potion.ID_Stock_Potion) INNER JOIN Commande ON Contient_Recipient_Potion.ID_Commande = Commande.ID_Commande)
SET Stock_Potion.Quantite_Potion = Stock_Potion.Quantite_Potion - 1
WHERE Commande.ID_Commande = 7;


UPDATE ((Onguent_en_stock INNER JOIN Contient_Onguent ON Onguent_en_stock.ID_Onguent_en_stock = Contient_Onguent.ID_Onguent_en_stock) INNER JOIN Commande ON Contient_Onguent.ID_Commande = Commande.ID_Commande)
SET Onguent_en_stock.Quantite_stock_onguent = Onguent_en_stock.Quantite_stock_onguent - 1
WHERE Commande.ID_Commande = 7;
